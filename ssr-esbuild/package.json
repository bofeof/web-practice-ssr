{
  "dependencies": {
    "cross-env": "^7.0.3",
    "esbuild": "0.17.17",
    "express": "^4.18.2",
    "nodemon": "^2.0.22",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "name": "ssr-esbuild",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "dev:build-client": "esbuild frontend-ssr/src/index.js --bundle --outfile=dist/client.js --loader:.js=jsx",
    "dev:build-server": "esbuild backend-ssr/server.js --bundle --loader:.js=jsx --outfile=build/server.js --platform=node",
    "build": "npm run dev:build-client --watch && npm run dev:build-server --watch",
    "start:server": "node build/server.js",
    "start":"npm run build && npm run start:server"
  },
